@model Student
<h3>About @Model.FirstName @Model.LastName</h3>

<table>
    <tr>
        <th>Student ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Picture </th>
        <th>Gender</th>
        <th>State</th>
        <th>Email</th>
        <th>Hobbies</th>
        <th>Favorite Food</th>
        <th>Favorite Song</th>
        <th>Favorite Movie</th>
        <th>Future Career</th>
        <th>Quote</th>
    </tr>
    <tr>
        <td>@Model.StudentID</td>
        <td>@Model.FirstName</td>
        <td>@Model.LastName</td>
        <td>@Model.Picture</td>        
        <td>@Model.Gender</td>
        <td>@Model.States</td>
        <td>@Model.Email</td>
        <td>@Model.Hobbies</td>
        <td>@Model.FavoriteFood</td>
        <td>@Model.FavoriteSong</td>
        <td>@Model.FavoriteMovie</td>
        <td>@Model.FutureCareer</td>
        <td>@Model.Quote</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Student/UpdateStudent/@Model.StudentID">Update Information</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteStudent", "Student", "Post"))
    {
        <input type="hidden" asp-for="StudentID" value="@Model.StudentID" />
        <input type="submit" onclick="Are you sure? Click ENTER to proceed." value="Delete this student" />
    }
</div>

