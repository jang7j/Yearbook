@model Student

<h2>Update @Model.FirstName</h2>

@using (Html.BeginForm("UpdateStudentToDatabase", "Student", "Post"))
{
  <input asp-for="StudentID" type="hidden" value="@Model.StudentID" />

    <label asp-for="FirstName" class="control-label">First Name</label>
    <input type="text" name="FirstName" class="form-control" value="@Model.FirstName" />

<label asp-for="LastName" class="control-label">Last Name</label>
    <input type="text" name="LastName" class="form-control" value="@Model.LastName" />
       
    <label asp-for="Email" class="control-label">Email</label>
    <input type="text" name="Email" class="form-control" value="@Model.Email" />

    <label asp-for="Hobbies" class="control-label">Hobbies</label>
    <input type="text" name="Hobbies" class="form-control" value="@Model.Hobbies" />

    <label asp-for="FavoriteFood" class="control-label">Favorite Food</label>
    <input type="text" name="FavoriteFood" class="form-control" value="@Model.FavoriteFood" />

    <label asp-for="FavoriteSong" class="control-label">Favorite Song</label>
    <input type="text" name="FavoriteSong" class="form-control" value="@Model.FavoriteSong" />

    <label asp-for="FavoriteMovie" class="control-label">Favorite Movie</label>
    <input type="text" name="FavoriteMovie" class="form-control" value="@Model.FavoriteMovie" />

    <label asp-for="FutureCareer" class="control-label">Future Career</label>
    <input type="text" name="FutureCareer" class="form-control" value="@Model.FutureCareer" />

     <label asp-for="Quote" class="control-label">Quote</label>
    <input type="text" name="Quote" class="form-control" value="@Model.Quote" />

    
    <input type="submit" value="Update Student" class="btn btn-primary" />
}